{
    "name": "jlinn/mandrill-api-php",
    "type": "library",
    "description": "A PHP client library for Mandrill's REST API",
    "keywords": ["mandrill"],
    "license": "MIT",
    "authors": [
        {
            "name": "Joe Linn",
            "homepage": "https://github.com/jlinn"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "guzzlehttp/guzzle": "6.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-0": {
            "Jlinn\\": "src/Jlinn/"
        },
        "psr-4": {
            "Jlinn\\": "src/Jlinn/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Jlinn\\": "tests/"
        },
        "psr-4": {
            "Jlinn\\": "tests/"
        }
    }
}